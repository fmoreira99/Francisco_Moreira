@model IEnumerable<Francisco_Moreira.Models.Tarea>

@{
    ViewBag.Title = "Index";
}

<div class="min-h-screen bg-gray-100 py-8">
    <div class="container mx-auto">
        <h2 class="text-3xl font-semibold text-gray-800 mb-6">Tareas</h2>

        <div class="mb-4">
            @Html.ActionLink("Crear Nueva", "Create", null, new { @class = "bg-gray-800 text-white py-2 px-4 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500" })
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
                <thead>
                    <tr class="bg-gray-800 text-white text-left">
                        <th class="py-3 px-4">@Html.DisplayNameFor(model => model.Titulo)</th>
                        <th class="py-3 px-4">@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th class="py-3 px-4">@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                        <th class="py-3 px-4">@Html.DisplayNameFor(model => model.FechaVencimiento)</th>
                        <th class="py-3 px-4">@Html.DisplayNameFor(model => model.Completada)</th>
                        <th class="py-3 px-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-4">@Html.DisplayFor(modelItem => item.Titulo)</td>
                            <td class="py-3 px-4">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td class="py-3 px-4">@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                            <td class="py-3 px-4">@Html.DisplayFor(modelItem => item.FechaVencimiento)</td>
                            <td class="py-3 px-4">@Html.DisplayFor(modelItem => item.Completada)</td>
                            <td class="py-3 px-4 space-x-2">
                                @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "text-blue-600 hover:underline" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "text-green-600 hover:underline" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID }, new { @class = "text-red-600 hover:underline" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
