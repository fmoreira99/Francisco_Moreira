@model Francisco_Moreira.Models.Tarea

@{
    ViewBag.Title = "Delete";
}

<div class="min-h-screen bg-gray-100 py-8">
    <div class="container mx-auto">
        <h2 class="text-3xl font-semibold text-gray-800 mb-6">Eliminar Tarea</h2>

        <h3 class="text-xl text-gray-700 mb-4">¿Estás seguro de que deseas eliminar esta tarea?</h3>

        <div class="bg-white shadow-md rounded-lg px-8 py-6">
            <h4 class="text-2xl text-gray-800 mb-4">Tarea</h4>
            <hr class="mb-4" />

            <dl class="space-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-700">
                        @Html.DisplayNameFor(model => model.Titulo)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @Html.DisplayFor(model => model.Titulo)
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-700">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-700">
                        @Html.DisplayNameFor(model => model.FechaCreacion)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @Html.DisplayFor(model => model.FechaCreacion)
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-700">
                        @Html.DisplayNameFor(model => model.FechaVencimiento)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @Html.DisplayFor(model => model.FechaVencimiento)
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-700">
                        @Html.DisplayNameFor(model => model.Completada)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @Html.DisplayFor(model => model.Completada)
                    </dd>
                </div>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-6 flex justify-between">
                    <input type="submit" value="Eliminar" class="bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-red-400" />
                    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "text-gray-800 hover:text-gray-600" })
                </div>
            }
        </div>
    </div>
</div>
